<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mastega.sample.ProgressMeterActivity"
    android:orientation="vertical">

    <com.mastega.progessmeter.ProgressMeter
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_meter"
        android:layout_margin="5dp">
    </com.mastega.progessmeter.ProgressMeter>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/prev_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PREVIOUS STATE"
            android:layout_weight="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NEXT STATE"
            android:id="@+id/next_state"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is just some text. You are now at the first step."
        android:id="@+id/text_stuff"/>

</LinearLayout>
